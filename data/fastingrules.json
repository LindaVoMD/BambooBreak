    "normalMeal": {
      "title": "Was ist eine normale Mahlzeit?",
      "items": [
        "z. B. Brot/Brötchen mit Belag, Müsli, warme Hauptmahlzeit",
        "Hinweis für < 1 Jahr: Beikost (z. B. Brei) zählt hier als 'normale Mahlzeit' und folgt denselben Zeiten."
      ]
    },
    "lightMeal": {
      "title": "Was ist eine leichte Mahlzeit?",
      "items": [
        "z. B. 1 Toast mit Marmelade",
        "1 Apfel",
        "1 Banane",
        "1 Becher Joghurt",
        "oder",
        "ein Becher Milch/ Kakao",
        "Hinweis für < 1 Jahr: 1 kleine Portion Beikost (z.B Brei oder Kompott) fällt unter 'leichte Mahlzeit'."
      ]
    },
    "clearFluids": {
      "title": "Was ist eine klare Flüssigkeit?",
      "items": [
        "Wasser",
        "(gesüßter) Tee",
        "klarer Fruchtsaft ohne Fruchtfleisch"
      ]
    },
    "breastmilk": {
      "title": "Muttermilch",
      "items": [
        "Gilt nur für < 1 Jahr.",
        "Muttermilch (gestillt, abgepumpt oder angereichert) ist bis 3 Stunden vor OP erlaubt."
      ]
    }
  },
